<?xml version="1.0" encoding="utf-8"?>
<UserControl x:ConnectionId='1'
    x:Class="Edam.WinUI.Controls.Utilities.DiagnosticsLogControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Edam.WinUI.Controls.Controls.Utilities"
    xmlns:diag="using:Edam.Diagnostics"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" VerticalAlignment="Stretch">

   <Grid>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
         <RowDefinition Height="45"/>
         <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <StackPanel Background="#efefef"
             Grid.Row="0" Grid.Column="0">
         <AppBarButton x:ConnectionId='7' Icon="Clear" LabelPosition="Collapsed"
                                                     ToolTipService.ToolTip="Clean all Entries"/>
      </StackPanel>
      
      <ListView x:ConnectionId='2'                                          VerticalAlignment="top" 
             HorizontalAlignment="Stretch"
             ScrollViewer.VerticalScrollBarVisibility="Visible"
             ScrollViewer.VerticalScrollMode="Auto"
             ScrollViewer.HorizontalScrollMode="Auto" CanBeScrollAnchor="True"
             BorderBrush="LightGray" BorderThickness="1"
             Grid.Row="1" Grid.Column="0"
             MaxWidth="600" 
             >
         <ListView.ItemTemplate>
            <DataTemplate                                   >
               <StackPanel x:ConnectionId='4' Padding="2,4,2,4">
                  <TextBlock x:ConnectionId='5'                                   
                          FontSize="10" Foreground="Gray"/>
                  <TextBlock x:ConnectionId='6'                             
                          FontSize="12" TextWrapping="WrapWholeWords"/>
               </StackPanel>
            </DataTemplate>
         </ListView.ItemTemplate>
      </ListView>
   </Grid>
   
</UserControl>

