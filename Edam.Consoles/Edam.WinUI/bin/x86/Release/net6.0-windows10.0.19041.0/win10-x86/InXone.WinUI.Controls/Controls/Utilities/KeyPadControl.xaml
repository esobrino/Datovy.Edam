<UserControl x:ConnectionId='1'
   x:Class="InXone.WinUI.Controls.Utilities.KeyPadControl"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="using:InXone.WinUI.Controls.Utilities"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   mc:Ignorable="d">

   <Grid>
      <Border
         Padding="20"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"
         Background="WhiteSmoke"
         BorderBrush="LightGray"
         BorderThickness=".5"
         CornerRadius="10">
         <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock x:ConnectionId='2'
               Margin="0,12,0,0"
               HorizontalAlignment="Center"
               FontSize="18"
                                                                />

            <Grid Margin="0,10" HorizontalAlignment="Center">
               <Grid.RowDefinitions>
                  <RowDefinition MaxHeight="50" />
               </Grid.RowDefinitions>
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="Auto" />
               </Grid.ColumnDefinitions>
               <TextBlock x:ConnectionId='16'
                  x:Name="TextBox"
                  Grid.Row="0"
                  Grid.Column="0"
                  FontSize="26"
                  FontWeight="Bold"
                  TextAlignment="Center" />
            </Grid>

            <Grid HorizontalAlignment="Center">
               <Grid.RowDefinitions>
                  <RowDefinition MaxHeight="50" />
                  <RowDefinition MaxHeight="50" />
                  <RowDefinition MaxHeight="50" />
                  <RowDefinition MaxHeight="50" />
                  <RowDefinition MaxHeight="50" />
                  <RowDefinition MaxHeight="50" />
               </Grid.RowDefinitions>
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="Auto" />
               </Grid.ColumnDefinitions>

               <local:TextButtonControl x:ConnectionId='3'
                  Grid.Row="0"
                  Grid.Column="0"
                  CornerRadius="10"
                                                                   
                  Texto="1" />
               <local:TextButtonControl x:ConnectionId='4'
                  Grid.Row="0"
                  Grid.Column="1"
                  CornerRadius="10"
                                                                   
                  Texto="2" />
               <local:TextButtonControl x:ConnectionId='5'
                  Grid.Row="0"
                  Grid.Column="2"
                  CornerRadius="10"
                                                                   
                  Texto="3" />

               <local:TextButtonControl x:ConnectionId='6'
                  Grid.Row="1"
                  Grid.Column="0"
                  CornerRadius="10"
                                                                   
                  Texto="4" />
               <local:TextButtonControl x:ConnectionId='7'
                  Grid.Row="1"
                  Grid.Column="1"
                  CornerRadius="10"
                                                                   
                  Texto="5" />
               <local:TextButtonControl x:ConnectionId='8'
                  Grid.Row="1"
                  Grid.Column="2"
                  CornerRadius="10"
                                                                   
                  Texto="6" />

               <local:TextButtonControl x:ConnectionId='9'
                  Grid.Row="2"
                  Grid.Column="0"
                  CornerRadius="10"
                                                                   
                  Texto="7" />
               <local:TextButtonControl x:ConnectionId='10'
                  Grid.Row="2"
                  Grid.Column="1"
                  CornerRadius="10"
                                                                   
                  Texto="8" />
               <local:TextButtonControl x:ConnectionId='11'
                  Grid.Row="2"
                  Grid.Column="2"
                  CornerRadius="10"
                                                                   
                  Texto="9" />

               <local:TextButtonControl x:ConnectionId='12'
                  Grid.Row="3"
                  Grid.Column="0"
                  CornerRadius="10"
                                                                   
                  Texto="&lt;" />
               <local:TextButtonControl x:ConnectionId='13'
                  Grid.Row="3"
                  Grid.Column="1"
                  CornerRadius="10"
                                                                   
                  Texto="0" />
               <local:TextButtonControl x:ConnectionId='14'
                  x:Name="OKButton"
                  Grid.Row="3"
                  Grid.Column="2"
                  Background="White"
                  CornerRadius="10"
                                                                   
                  Texto="OK" />

               <local:TextButtonControl x:ConnectionId='15'
                  Grid.Row="4"
                  Grid.ColumnSpan="3"
                  Background="White"
                  CornerRadius="10"
                                                                   
                  Texto="Cancel" />
            </Grid>
         </StackPanel>
      </Border>
   </Grid>
</UserControl>

