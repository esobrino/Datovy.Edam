<UserControl x:ConnectionId='1'
    x:Class="InXone.WinUI.Controls.Assets.AssetViewerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InXone.WinUI.Controls.Assets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dg="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prj="using:InXone.WinUI.Controls.Projects"
    mc:Ignorable="d">

   <!-- The name of the TabViewItem(s) should not be changed since those are
        used to establish the scope of commands/operations -->
   <TabView x:ConnectionId='2' VerticalAlignment="Stretch" IsAddTabButtonVisible="False" x:Name="TabViewer"
                                                          Padding="0,0">
      <TabView.TabItems>
         <TabViewItem x:ConnectionId='3' x:Name="FileTab" Header="File">
            <TabViewItem.IconSource>
               <SymbolIconSource Symbol="Document" />
            </TabViewItem.IconSource>
            <prj:ProjectFileEditorControl x:ConnectionId='8' x:Name="FileEditorControl"
                                                 />
         </TabViewItem>
         <TabViewItem x:ConnectionId='4' x:Name="AssetTab" Header="Asset" IsEnabled="False">
            <TabViewItem.IconSource>
               <SymbolIconSource Symbol="ShowResults" />
            </TabViewItem.IconSource>
            <local:AssetDataElementGridControl x:ConnectionId='7' x:Name="ElementGridControl" />
         </TabViewItem>
         <TabViewItem x:ConnectionId='5' x:Name="UseCaseTab" Header="Use Cases" Visibility="Collapsed">
            <TabViewItem.IconSource>
               <SymbolIconSource Symbol="OtherUser" />
            </TabViewItem.IconSource>
            <local:AssetUseCaseGridControl x:ConnectionId='6' x:Name="UseCaseGridControl" />
         </TabViewItem>
      </TabView.TabItems>
   </TabView>
</UserControl>

