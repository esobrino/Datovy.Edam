<UserControl x:ConnectionId='1'
    x:Class="InXone.WinUI.Controls.Assets.AssetDataTreeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InXone.WinUI.Controls.Assets"
    xmlns:models="using:InXone.WinUI.Controls.DataModels"
    xmlns:cnv="using:InXone.WinUI.Controls.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ed="using:InXone.WinUI.Controls.Editors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                              
                          >

   <UserControl.Resources>
      <cnv:FolderFileIconConverter x:Key="FileConverter" />
      <cnv:StringToBrushConverter x:Key="ColorKeyConverter" />
   </UserControl.Resources>

   <TreeView x:ConnectionId='2' ScrollViewer.VerticalScrollMode="Auto" CanDragItems="False" CanDrag="False"
               x:Name="TreeView" Background="#F9F9F9" VerticalAlignment="Stretch"
                                                                              
               SelectionMode="Single"                                                            
               IsDoubleTapEnabled="True"                                     
               >
      <TreeView.ItemTemplate>
         <DataTemplate                                  >
            <TreeViewItem x:ConnectionId='4' Padding="0,0,10,0"                                             >
               <TreeViewItem.ContextFlyout>
                  <MenuFlyout>

                  </MenuFlyout>
               </TreeViewItem.ContextFlyout>
               <StackPanel>
                  <StackPanel x:ConnectionId='5' Orientation="Horizontal" 
                                                                               >
                     <FontIcon x:ConnectionId='6' FontFamily="Segoe MDL2 Assets"                                                
                                                                                                   
                               />
                     <TextBlock x:ConnectionId='7'                                       Margin="2,0,2,0" />
                     <TextBlock x:ConnectionId='8' x:Name="ItemText"                           
                                                                            
                                                                             
                                                                                              />
                  </StackPanel>
               </StackPanel>
            </TreeViewItem>
         </DataTemplate>
      </TreeView.ItemTemplate>
   </TreeView>
</UserControl>

