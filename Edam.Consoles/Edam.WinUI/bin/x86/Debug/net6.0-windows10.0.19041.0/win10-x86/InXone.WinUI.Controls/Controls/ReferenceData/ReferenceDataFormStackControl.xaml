<UserControl x:ConnectionId='1'
   x:Class="InXone.WinUI.Controls.Controls.ReferenceData.ReferenceDataFormStackControl"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="using:InXone.WinUI.Controls.Controls.ReferenceData"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   mc:Ignorable="d">

   <Grid x:ConnectionId='2' x:Name="DataEditorGrid">
      <Grid.RowDefinitions>
         <RowDefinition Height="*" />
         <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <ScrollViewer x:ConnectionId='3' x:Name="DataEditorControl" Grid.Row="0" />
      <StackPanel x:ConnectionId='4'
         x:Name="DataEditorCommandControl"
         Grid.Row="1"
         Margin="10,5,10,10"
         Padding="0,10,0,0"
         BorderBrush="LightGray"
         BorderThickness="0,.5,0,0"
         Orientation="Vertical">
         <ComboBox x:ConnectionId='5'
            x:Name="RecordStatusCodeControl"
                                                  
            DisplayMemberPath="Description"
                                                                       
                                                               
                                                                                    
            SelectedValuePath="CodeId" />
         <StackPanel Margin="0,10" Orientation="Horizontal">
            <Button x:ConnectionId='7'
               Width="80"
                                 
                                                                       
                                           />
            <Button x:ConnectionId='8'
               Width="80"
               Margin="5,0"
                                   
                                                                         
               IsTabStop="False" />
            <Button x:ConnectionId='9'
               Width="80"
                                
                                                                      
               IsTabStop="False" />
         </StackPanel>
         <TextBlock x:ConnectionId='6'                                                          />
      </StackPanel>
   </Grid>
</UserControl>

