<UserControl x:ConnectionId='1'
    x:Class="InXone.WinUI.Controls.Entities.ParticipantListViewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lc="using:InXone.WinUI.Controls.Common"
    xmlns:tk="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:pson="using:InXone.UI.DataModel.Entities"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" x:Name="This">

   <tk:DockPanel LastChildFill="True">

      <StackPanel Orientation="Horizontal" VerticalAlignment="Top"
                  Padding="16,14" tk:DockPanel.Dock="Top">
         <TextBlock x:ConnectionId='6'                                                   
                    FontWeight="Bold" Foreground="DarkBlue"/>
         <Button x:ConnectionId='7' x:Name="ToggleParticipants"                                                           Margin="8,0,0,0" Background="Transparent" BorderThickness="0" Padding="0">
            <FontIcon x:ConnectionId='8' FontSize="11" FontFamily="Segoe MDL2 Assets"                                                                />
         </Button>
      </StackPanel>

      <ListView x:ConnectionId='2'                                       
                                                                                               
         x:Name="ParticipantList"                                            
                                                            >
         <ListView.ItemTemplate>
            <DataTemplate                              >
               <StackPanel x:ConnectionId='4'>
                  <Grid>
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                     </Grid.ColumnDefinitions>
                     <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                     </Grid.RowDefinitions>
                     <TextBlock x:ConnectionId='5' Grid.Column="0" VerticalAlignment="Center" 
                                                                    />
                     <ComboBox Grid.Column="1" MinWidth="150"
                               DisplayMemberPath="Description" SelectedValuePath="CodeId"
                               lc:AncestorSource.AncestorType="ListView"
                               ItemsSource="{Binding DataContext.RoleCodes.Items, Mode=TwoWay}"                               
                               SelectedItem="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DataContext.RoleCode, Mode=TwoWay}" />
                  </Grid>
               </StackPanel>
            </DataTemplate>
         </ListView.ItemTemplate>
      </ListView>
   </tk:DockPanel>
</UserControl>

