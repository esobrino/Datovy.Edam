<UserControl x:ConnectionId='1'
   x:Class="Edam.WinUI.Controls.Accounts.AccountLoginControl"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="using:Edam.WinUI.Controls.Accounts"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   d:DesignHeight="300"
   d:DesignWidth="400"
                              
   mc:Ignorable="d">

   <Grid>
      <Grid.Resources>
         <ThemeShadow x:ConnectionId='2' x:Name="BackgroundControlShadow" />
      </Grid.Resources>

      <Grid x:ConnectionId='3' x:Name="BackgroundGrid" />

      <Border x:ConnectionId='4'
         x:Name="PanelBox"
                                               
         Padding="20"
         VerticalAlignment="Center"
         Background="White"
         CornerRadius="5"
         Shadow="{StaticResource BackgroundControlShadow}"
         Translation="0,2,32">

         <StackPanel Orientation="Vertical">
            <ProgressBar x:ConnectionId='5'
               x:Name="ProgressBar"
               Width="130"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               IsIndeterminate="True"
               ShowError="False"
               ShowPaused="False"
                                                                        />

            <StackPanel x:ConnectionId='6' Margin="0,10,0,0"                                                               >
               <TextBlock x:ConnectionId='7'
                  MinHeight="28"
                  Margin="0,5"
                  FontSize="20"
                                                                   />

               <TextBox x:ConnectionId='8'
                  x:Name="OrganizationId"
                  Background="White"
                                                               
                  IsSpellCheckEnabled="False"
                                               
                  PlaceholderText="Organization Id"
                                                                        />
               <TextBox x:ConnectionId='9'
                  x:Name="UserEmailText"
                  Margin="0,5"
                  Background="White"
                                                               
                  IsSpellCheckEnabled="False"
                                               
                  PlaceholderText="Email"
                                                                   />

               <StackPanel x:ConnectionId='10' x:Name="RequestIdBox"                                               >
                  <TextBlock x:ConnectionId='19'
                     MinHeight="22"
                     FontSize="14"
                                                                   />
                  <TextBox x:ConnectionId='20'
                     x:Name="RequestIdEntry"
                     Background="White"
                     PlaceholderText="Enter code here"
                                                                      />
               </StackPanel>

               <PasswordBox x:ConnectionId='11'
                  x:Name="Password1Entry"
                  Background="White"
                                               
                                                                         
                  PlaceholderText="Password"
                                                                   />
               <PasswordBox x:ConnectionId='12'
                  x:Name="Password2Entry"
                  Margin="0,5"
                  Background="White"
                                                                      
                  PlaceholderText="Retype Password"
                                                                   />

               <StackPanel Margin="0,5" Orientation="Vertical">
                  <CheckBox x:ConnectionId='16'
                     x:Name="AcceptPrivacyIndicator"
                     Background="White"
                     Content="Accept Privacy Statement"
                                                                              
                                                   />
                  <CheckBox x:ConnectionId='17'
                     x:Name="AcceptTermsIndicator"
                     Background="White"
                     Content="Accept Terms and Conditions"
                                                                            
                                                   />
                  <CheckBox x:ConnectionId='18'
                     x:Name="KeepMeLoggedIndicator"
                     Background="White"
                     Content="Keep Me Logged"
                                                                              />
               </StackPanel>

               <Button x:ConnectionId='13'
                  x:Name="SubmitButton"
                  HorizontalAlignment="Stretch"
                  BorderBrush="#999999"
                  BorderThickness="2"
                                                              
                                                                      
                                                                        />

               <Button x:ConnectionId='14'
                  x:Name="ForgotButton"
                  Margin="0,5,0,5"
                  HorizontalAlignment="Stretch"
                  BorderBrush="#999999"
                  BorderThickness="2"
                                                              
                                                                             
                                                               >
                  Forgot
               </Button>

               <Button x:ConnectionId='15'
                  HorizontalAlignment="Stretch"
                  BorderBrush="#999999"
                  BorderThickness="2"
                                                              >
                  Cancel
               </Button>

               <TextBlock
                  Margin="0,10,0,40"
                  HorizontalAlignment="Center"
                  Text="KnowTech (c) 2017 - 2021 . Edam v1r0" />
            </StackPanel>

         </StackPanel>

      </Border>

   </Grid>
</UserControl>

