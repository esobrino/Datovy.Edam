<UserControl x:ConnectionId='1'
    x:Class="Edam.WinUI.Controls.Assets.AssetMapItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Edam.WinUI.Controls.Assets"
    xmlns:nb="using:Edam.WinUI.Controls.Booklets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dt="using:Edam.Data.AssetSchema"
    xmlns:fv="using:Edam.WinUI.Controls.Utilities"
    mc:Ignorable="d">

   <Grid Background="#EFEFEF">
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
         <RowDefinition Height="Auto"/>
         <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      
      <ScrollViewer x:ConnectionId='2' Grid.Row="0" Grid.Column="0"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                  
                                              >
         <ListView x:ConnectionId='4' HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                     
                                                                          >
            <ListView.ItemTemplate>
               <DataTemplate                                 >
                  <Grid BorderThickness="1" BorderBrush="LightBlue" Margin="0,4"
                        Background="White">
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                     </Grid.ColumnDefinitions>
                     <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                     </Grid.RowDefinitions>

                     <ListView x:ConnectionId='7' Grid.Row="0" Grid.Column="0"
                                                                             
                            ItemsSource="{Binding SourceElement, Mode=TwoWay}"
                            x:Name="SourceControl">
                        <ListView.ContextFlyout>
                           <MenuFlyout>
                              <MenuFlyoutItem x:ConnectionId='11' Text="Delete" ToolTipService.ToolTip="Select Item then Delete" Icon="Delete"                               />
                           </MenuFlyout>
                        </ListView.ContextFlyout>
                        <ListView.ItemTemplate>
                           <DataTemplate>
                              <Border BorderThickness="0,0,0,1" BorderBrush="LightGray" Padding="0,4" Margin="0,0,0,4">
                                 <TextBlock TextWrapping="WrapWholeWords" Text="{Binding Path}"/>
                              </Border>
                           </DataTemplate>
                        </ListView.ItemTemplate>
                     </ListView>

                     <FontIcon Grid.Row="0" Grid.Column="1" Margin="20,0"
                            Foreground="#4f4f4f" FontFamily="Segoe MDL2 Assets" Glyph="&#xF0AF;"/>

                     <ListView x:ConnectionId='8' Grid.Row="0" Grid.Column="2" 
                                                                             
                            ItemsSource="{Binding TargetElement, Mode=TwoWay}"
                            x:Name="TargetControl">
                        <ListView.ContextFlyout>
                           <MenuFlyout>
                              <MenuFlyoutItem x:ConnectionId='9' Text="Delete" Icon="Delete"                               />
                           </MenuFlyout>
                        </ListView.ContextFlyout>
                        <ListView.ItemTemplate>
                           <DataTemplate>
                              <Border BorderThickness="0,0,0,1" BorderBrush="LightGray" Padding="0,4" Margin="0,0,0,4">
                                 <TextBlock TextWrapping="WrapWholeWords" Text="{Binding Path}"/>
                              </Border>
                           </DataTemplate>
                        </ListView.ItemTemplate>
                     </ListView>

                  </Grid>
               </DataTemplate>
            </ListView.ItemTemplate>
         </ListView>
      </ScrollViewer>

      <TabView Grid.Row="1" Grid.Column="0" Background="#EFEFEF"
                     VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                     IsAddTabButtonVisible="False" TabWidthMode="SizeToContent"
                     >
         <TabView.TabItems>
            <TabViewItem Header="Use Cases">
               <fv:FolderViewControl x:ConnectionId='3' x:Name="FolderViewer" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabViewItem>
            <TabViewItem Header="Booklet">
               <nb:BookletPanelControl  
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
               </nb:BookletPanelControl>
            </TabViewItem>
            <TabViewItem Header="Documentation">
               <StackPanel>

               </StackPanel>
            </TabViewItem>
            <TabViewItem Header="Transformations">
               <StackPanel>

               </StackPanel>
            </TabViewItem>
         </TabView.TabItems>
      </TabView>
      
   </Grid>
</UserControl>

