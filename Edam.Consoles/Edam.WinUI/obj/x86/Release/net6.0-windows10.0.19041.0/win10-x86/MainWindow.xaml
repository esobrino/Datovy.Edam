<Window
   x:Class="InXone.WinUI.MainWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:ic="using:InXone.WinUI.Controls.Navigation"
   xmlns:local="using:InXone.WinUI"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   mc:Ignorable="d">

   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="*" />
         <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <ic:NavigationControl x:ConnectionId='2' x:Name="NavigationPanel" />
      <StackPanel x:ConnectionId='3'
         x:Name="StatusBar"
         Grid.Row="1"
         Padding="4,4"
         VerticalAlignment="Bottom"
         Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
         <TextBlock x:ConnectionId='4'
            x:Name="MessageText" Padding="10,0,10,0"
            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
            Text="InXone (c) 2017 - 2022 KnowTech Inc. All rights reserved." />
      </StackPanel>
   </Grid>
</Window>

