<UserControl x:ConnectionId='1'
   x:Class="InXone.WinUI.Controls.Projects.ProjectViewerControl"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:models="using:InXone.WinUI.Controls.DataModels"
   xmlns:ctk="using:CommunityToolkit.WinUI.UI.Controls"
   xmlns:local="using:InXone.WinUI.Controls.Projects"
   xmlns:asset="using:InXone.WinUI.Controls.Assets"
   mc:Ignorable="d">

   <Grid BorderBrush="LightGray" BorderThickness=".5,.5,.5,0" Background="#DFDFDF">
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="250" />
         <ColumnDefinition Width="6" />
         <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
         <RowDefinition Height="25"/>
         <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <StackPanel Grid.ColumnSpan="3" Orientation="Horizontal">
         
      </StackPanel>

      <Grid Grid.Column="0" Grid.Row="1" Background="#F9F9F9" CornerRadius="8" Margin="0,1,0,0">
         <StackPanel VerticalAlignment="Stretch">
            <local:ProjectSidePanelControl x:ConnectionId='3' x:Name="TreeViewSidePanel"
            VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                                                                     />
            <asset:AssetSidePanelControl x:ConnectionId='4' HorizontalAlignment="Stretch" x:Name="AssetViewSidePanel" 
            VerticalAlignment="Stretch"                                                                  />
         </StackPanel>
      </Grid>
      
      <ctk:GridSplitter Background="#DFDFDF"
         GripperCursor="SizeWestEast" Grid.Column="1" Grid.Row="1" Width="Auto" ResizeBehavior="BasedOnAlignment" ResizeDirection="Auto">
         <ctk:GridSplitter.Element>
            <Grid>
               <TextBlock HorizontalAlignment="Center" IsHitTestVisible="False" VerticalAlignment="Center"
                          Text="&#xE784;" FontFamily="Segoe MDL2 Assets" />
            </Grid>
         </ctk:GridSplitter.Element>
      </ctk:GridSplitter>

      <asset:AssetViewerControl x:ConnectionId='2' x:Name="AssetViewerControl"
                                            Grid.Column="2" Grid.Row="1"/>
   </Grid>
</UserControl>

