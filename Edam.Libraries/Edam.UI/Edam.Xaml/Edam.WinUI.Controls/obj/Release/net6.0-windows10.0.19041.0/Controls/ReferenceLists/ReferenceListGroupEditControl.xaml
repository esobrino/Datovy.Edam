<UserControl x:ConnectionId='1'
   x:Class="InXone.WinUI.Controls.ReferenceLists.ReferenceListGroupEditControl"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:helper="using:InXone.WinUI.Common"
   xmlns:local="using:InXone.WinUI.Controls.ReferenceLists"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   mc:Ignorable="d">

   <Grid>
      <StackPanel Orientation="Vertical">
         <StackPanel Margin="0,5" Orientation="Horizontal">
            <Button x:ConnectionId='5'
               Command="{Binding Path=SaveCommand}"
               Content="* Save"
                                                       />
         </StackPanel>
         <TextBlock Margin="0,5" Text="Press 'Save' when done updating following Groups" />
         <ListView x:ConnectionId='2'
            Margin="0,5"
            Padding="5"
            BorderBrush="LightGray"
            BorderThickness=".5"
                                                               
                                                                       >
            <ListView.ItemTemplate>
               <DataTemplate>
                  <StackPanel Orientation="Horizontal">
                     <ToggleSwitch IsOn="{Binding ItemChecked,Mode=TwoWay}"
                        OnContent="{Binding Name}"
                        OffContent="{Binding Name}"
                     />
                     <!--<TextBlock VerticalAlignment="Center"
                        FontSize="14" Margin="0" Padding="0"
                        FontWeight="Bold"
                        Text="{Binding Name}" />-->
                  </StackPanel>
               </DataTemplate>
            </ListView.ItemTemplate>
         </ListView>
         <TextBlock x:ConnectionId='3' Margin="0,5"                                                          />
      </StackPanel>
   </Grid>
</UserControl>

