<UserControl x:ConnectionId='1'
   x:Class="Edam.WinUI.Controls.Controls.ReferenceData.ReferenceDataFormControl"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="using:Edam.WinUI.Controls.Controls.ReferenceData"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   mc:Ignorable="d">

   <ScrollViewer x:ConnectionId='2' x:Name="FormViewControl">
      <ScrollViewer.Content>
         <StackPanel Orientation="Vertical">
            <Grid>
               <Frame x:ConnectionId='8' x:Name="FormFrame" />
            </Grid>
            <Grid BorderBrush="LightGray" BorderThickness="0,.5,0,0">
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="Auto" />
               </Grid.ColumnDefinitions>
               <Grid.RowDefinitions>
                  <RowDefinition Height="Auto" />
               </Grid.RowDefinitions>
               <StackPanel
                  Grid.Row="0"
                  Grid.Column="0"
                  Margin="12,0,10,0"
                  Orientation="Horizontal">
                  <Button x:ConnectionId='5'
                     Width="80"
                     VerticalAlignment="Bottom"
                                       
                                                                             
                                                 />
                  <Button x:ConnectionId='6'
                     Width="80"
                     Margin="5,0"
                     VerticalAlignment="Bottom"
                                         
                                                                               
                     IsTabStop="False" />
                  <Button x:ConnectionId='7'
                     Width="80"
                     VerticalAlignment="Bottom"
                                      
                                                                            
                     IsTabStop="False" />
               </StackPanel>
               <TextBlock x:ConnectionId='3'
                  Grid.Row="0"
                  Grid.Column="1"
                  Margin="5,0,0,6"
                  VerticalAlignment="Bottom"
                                                                           />
               <ComboBox x:ConnectionId='4'
                  x:Name="FormRecordStatusCodeControl"
                  Grid.Row="0"
                  Grid.Column="2"
                  Width="150"
                  Margin="5,6,24,0"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom"
                  DisplayMemberPath="Description"
                                                                             
                                                                     
                                                                                          
                  SelectedValuePath="CodeId" />
            </Grid>
            <Grid Margin="0,0,0,15" />
         </StackPanel>
      </ScrollViewer.Content>
   </ScrollViewer>
</UserControl>

