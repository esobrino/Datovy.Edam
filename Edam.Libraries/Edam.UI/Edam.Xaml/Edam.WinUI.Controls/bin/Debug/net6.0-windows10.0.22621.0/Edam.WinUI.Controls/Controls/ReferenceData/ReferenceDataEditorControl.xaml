<UserControl x:ConnectionId='1'
   x:Class="Edam.WinUI.Controls.ReferenceData.ReferenceDataEditorControl"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:fctrl="using:Edam.WinUI.Controls.Controls.ReferenceData"
   xmlns:local="using:Edam.WinUI.Controls.ReferenceData"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:models="using:Edam.DataObjects.Models"
   mc:Ignorable="d">

   <Grid>
      <NavigationView x:ConnectionId='2'
         x:Name="TopMenuNavigation"
         IsBackButtonVisible="Collapsed"
         IsSettingsVisible="False"
                                                    
         PaneDisplayMode="Top"
         SelectionFollowsFocus="Disabled">
         <NavigationView.MenuItems>
            <NavigationViewItem x:ConnectionId='3'
               Content=""
               Icon="Refresh"
                                                                 
               ToolTipService.ToolTip="Refresh Tree View..." />
            <NavigationViewItem x:ConnectionId='4'                                                     IsEnabled="False" />
            <NavigationViewItemSeparator x:ConnectionId='5'                                                                          />
            <NavigationViewItem x:ConnectionId='6'
                                                                                
               Icon="ShowResults"
                                                       
               ToolTipService.ToolTip="Togle Form - Grid"
                                                                                        />
            <!--<NavigationViewItem
                     x:Name="FindItem"
                     Content="Find"
                     Icon="Find" />-->
         </NavigationView.MenuItems>
         <Grid BorderBrush="LightGray" BorderThickness=".5,.5,.5,0">
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="Auto" />
               <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
               <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0">
               <ComboBox x:ConnectionId='11'
                  Margin="1,1,0,1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Top"
                  BorderBrush="LightGray"
                  DisplayMemberPath="Metadata.TemplateName"
                                                                                          
                                                                                  />
               <TreeView x:ConnectionId='12'
                  x:Name="TreeView"
                  VerticalAlignment="Stretch"
                                                    
                                                                                      
                  SelectionMode="Single">
                  <TreeView.ItemTemplate>
                     <DataTemplate                                     >
                        <TreeViewItem x:ConnectionId='14'
                           Padding="0,0,10,0"
                                                   
                                                                     />
                     </DataTemplate>
                  </TreeView.ItemTemplate>
               </TreeView>
            </StackPanel>
            <Grid
               Grid.Column="1"
               BorderBrush="LightGray"
               BorderThickness=".5,0,0,0">
               <SplitView x:ConnectionId='7'
                  x:Name="DataEditorViewControl"
                  MinHeight="300"
                  DisplayMode="Inline"
                  IsPaneOpen="True"
                  OpenPaneLength="400"
                  PanePlacement="Right">
                  <SplitView.Pane>
                     <fctrl:ReferenceDataFormStackControl x:ConnectionId='9' x:Name="FormStackControl" />
                  </SplitView.Pane>
                  <fctrl:ReferenceDataGridControl x:ConnectionId='10' x:Name="DataGridControl" />
               </SplitView>
               <fctrl:ReferenceDataFormControl x:ConnectionId='8' x:Name="FormControl"                                                                           />
            </Grid>
         </Grid>
      </NavigationView>
   </Grid>
</UserControl>

