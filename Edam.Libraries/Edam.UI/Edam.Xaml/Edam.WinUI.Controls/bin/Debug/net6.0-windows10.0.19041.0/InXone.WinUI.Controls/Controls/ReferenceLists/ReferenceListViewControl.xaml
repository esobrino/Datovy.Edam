<UserControl x:ConnectionId='1'
   x:Class="InXone.WinUI.Controls.ReferenceLists.ReferenceListViewControl"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:helpers="using:InXone.Helpers"
   xmlns:local="using:InXone.DataObjects.Dashboards"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   d:DesignHeight="300"
   d:DesignWidth="400"
                              
   mc:Ignorable="d">

   <Grid>
      <!--<Grid.Resources>
         <ThemeShadow x:Name="BackgroundControlShadow" />
      </Grid.Resources>

      <Grid x:Name="BackgroundGrid" />-->

      <Border x:ConnectionId='2'
         x:Name="PanelBox"
                                               
         Padding="5"
         VerticalAlignment="Center"
         BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
         BorderThickness=".5">

         <ListView x:ConnectionId='3'
                                                               
                                                                       
            SelectionMode="Single">
            <ListView.ItemTemplate>
               <DataTemplate                                    >
                  <StackPanel x:ConnectionId='5' Orientation="Horizontal">
                     <Ellipse
                        x:Name="Ellipse"
                        Width="10"
                        Height="10"
                        Margin="6"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Fill="{ThemeResource SystemControlBackgroundBaseMediumBrush}" />
                     <TextBlock Width="280" Text="{Binding Path=RequestDescription}" />
                     <TextBlock x:ConnectionId='7'
                        Width="50"
                        HorizontalTextAlignment="Right"
                                                     />
                  </StackPanel>
               </DataTemplate>
            </ListView.ItemTemplate>
         </ListView>
      </Border>
   </Grid>
</UserControl>

