<UserControl x:ConnectionId='1'
   x:Class="InXone.WinUI.Controls.Entities.PersonBaseEditorControl"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="using:InXone.WinUI.Controls.Entities"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   mc:Ignorable="d">

   <Grid>
      <StackPanel Margin="10,8" Orientation="Vertical">
         <StackPanel x:ConnectionId='2' Orientation="Horizontal"                                                     >
            <Button x:ConnectionId='25'                                          Content="* Save" />
            <Button x:ConnectionId='26'
               Margin="5,0"
                                                           
               Content="Done" />
         </StackPanel>
         <StackPanel x:ConnectionId='3' Orientation="Horizontal"                                                      >
            <Button x:ConnectionId='23'                                          Content="= Find" />
            <Button x:ConnectionId='24'
               Margin="5,0"
                                                           
               Content="Done" />
         </StackPanel>
         <StackPanel x:ConnectionId='4' Orientation="Horizontal"                                                      >
            <Button x:ConnectionId='19'                                         Content="+ Add" />
            <Button x:ConnectionId='20'
               Margin="5,0"
                                                         
               Content="= Search" />
            <Button x:ConnectionId='21'
                                                       
               Content="^ Edit"
                                                                     />
            <Button x:ConnectionId='22'
               Margin="5,0"
                                                         
               Content="x Delete"
                                                                     />
         </StackPanel>
         <StackPanel x:ConnectionId='5'
            Margin="0,10"
            Orientation="Vertical"
                                                                 >
            <TextBox x:ConnectionId='10'
               Header="Email"
                                                                     
               PlaceholderText="Enter email (Required)"
                                                                         />
            <TextBox x:ConnectionId='11'
               Header="Phone Number (Mobile)"
                                                                     
               PlaceholderText="Enter phone number"
                                                                               />
            <DatePicker x:ConnectionId='12'
                                                                                  
               Header="Birth Date (Required)"
                                                                      />
            <Grid Margin="0,10">
               <Grid.RowDefinitions>
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
               </Grid.RowDefinitions>
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="5" />
                  <ColumnDefinition Width="*" />
               </Grid.ColumnDefinitions>
               <StackPanel
                  Grid.Row="0"
                  Grid.Column="0"
                  Orientation="Vertical">
                  <TextBox x:ConnectionId='18'
                     Header="First Name"
                                                                           
                     PlaceholderText="First Name (Required)"
                                                                                   />
               </StackPanel>
               <StackPanel
                  Grid.Row="0"
                  Grid.Column="2"
                  Orientation="Vertical">
                  <TextBox x:ConnectionId='17'
                     Header="Middle Name"
                                                                           
                     PlaceholderText="Middle Name"
                                                                                    />
               </StackPanel>
               <StackPanel
                  Grid.Row="1"
                  Grid.Column="0"
                  Orientation="Vertical">
                  <TextBox x:ConnectionId='16'
                     Header="Last Name (Father)"
                                                                           
                     PlaceholderText="Last Name (Required)"
                                                                                        />
               </StackPanel>
               <StackPanel
                  Grid.Row="1"
                  Grid.Column="2"
                  Orientation="Vertical">
                  <TextBox x:ConnectionId='15'
                     Header="Last Name (Mother)"
                                                                           
                     PlaceholderText="Second Last Name"
                                                                                        />
               </StackPanel>
               <StackPanel
                  Grid.Row="2"
                  Grid.Column="0"
                  Orientation="Vertical">
                  <TextBox x:ConnectionId='14'
                     Header="State"
                                                                           
                     PlaceholderText="Enter state (e.g. PA)"
                                                                                       />
               </StackPanel>
               <StackPanel
                  Grid.Row="2"
                  Grid.Column="2"
                  Orientation="Vertical">
                  <TextBox x:ConnectionId='13'
                     Header="Postal Code"
                                                                           
                     PlaceholderText="Enter postal code"
                                                                                    />
               </StackPanel>
            </Grid>
         </StackPanel>
         <StackPanel Orientation="Vertical" Visibility="{Binding InSearch}">
            <TextBlock Text="Found records will be added to list." />
            <TextBlock Margin="0,0,0,10" Text="Refresh list to view group items only..." />

            <TextBox x:ConnectionId='6'
               Header="Email"
               PlaceholderText="Search by email"
                                                                         />
            <TextBox x:ConnectionId='7'
               Header="Phone Number (Mobile)"
               PlaceholderText="Search by phone number"
                                                                               />

            <Grid>
               <Grid.RowDefinitions>
                  <RowDefinition Height="Auto" />
               </Grid.RowDefinitions>
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
               </Grid.ColumnDefinitions>
               <StackPanel
                  Grid.Row="0"
                  Grid.Column="0"
                  Orientation="Vertical">
                  <TextBox x:ConnectionId='9'
                     Header="First Name"
                     PlaceholderText="Search first name"
                                                                                   />
               </StackPanel>
               <StackPanel
                  Grid.Row="0"
                  Grid.Column="1"
                  Orientation="Vertical">
                  <TextBox x:ConnectionId='8'
                     Header="Last Name (Father)"
                     PlaceholderText="Search last name"
                                                                                        />
               </StackPanel>
            </Grid>
         </StackPanel>
      </StackPanel>
   </Grid>
  
</UserControl>

