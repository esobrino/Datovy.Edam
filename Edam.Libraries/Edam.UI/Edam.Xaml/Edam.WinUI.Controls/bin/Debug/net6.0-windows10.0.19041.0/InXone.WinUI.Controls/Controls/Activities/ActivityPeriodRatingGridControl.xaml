      <sf:SfDataGrid x:ConnectionId='2' 
            VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
            x:Name="DataGrid" AllowEditing="True" EditTrigger="OnTap"
            AllowResizingColumns="True" Background="White"
            ScrollViewer.VerticalScrollBarVisibility="Visible"
            ScrollViewer.HorizontalScrollBarVisibility="Visible"
            AutoGenerateColumns="False" EnableDataVirtualization="True"
            ColumnWidthMode="AutoWithLastColumnFill" AllowSorting="False" 
                                                                       
                                                               >
         <sf:SfDataGrid.Columns>
            <sf:GridTextColumn HeaderText="Participant Name" MappingName="ParticipantName" 
                               AllowEditing="False" MinimumWidth="250" AllowSorting="True" />
            <sf:GridDateColumn DisplayDateFormat="yyyy-MM-dd" HeaderText="Date" MappingName="ReferenceDate"
                               MinimumWidth="125" AllowSorting="True" />
            <sf:GridComboBoxColumn x:ConnectionId='3'                                                                           
                                   HeaderText="Topic" DisplayMemberPath="IdentifierId"
                                   SelectedValuePath="IdentifierId" MappingName="ContentIdentifierId"
                                   MinimumWidth="115"/>
            <sf:GridCheckBoxColumn HeaderText="Present" MappingName="ParticipationIndicator" />
            <sf:GridComboBoxColumn x:ConnectionId='4'                                                                     
                                   HeaderText="Entry Type" DisplayMemberPath="Description"
                                   SelectedValuePath="CodeNo" MappingName="RatingTypeNo"
                                   MinimumWidth="210"/>
            <sf:GridComboBoxColumn x:ConnectionId='5'                                                                     
                                   HeaderText="Result Type" DisplayMemberPath="Description"
                                   SelectedValuePath="CodeNo" MappingName="ResultTypeNo"
                                   MinimumWidth="170"/>
            <sf:GridComboBoxColumn x:ConnectionId='6'                                                                 
                                   HeaderText="Status" DisplayMemberPath="Description"
                                   SelectedValuePath="CodeNo" MappingName="StatusNo" MinimumWidth="130" />
            <sf:GridTextColumn HeaderText="Score" MappingName="RatedValueText" TextAlignment="Right" />
            <sf:GridTextColumn HeaderText="Comments" MappingName="Alias" MinimumWidth="300" />
         </sf:SfDataGrid.Columns>
      </sf:SfDataGrid>
