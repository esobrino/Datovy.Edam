<UserControl x:ConnectionId='1'
   x:Class="InXone.WinUI.Controls.Entities.EntityFollowUpViewControl"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="using:InXone.WinUI.Controls.Entities"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:nt="using:InXone.WinUI.Controls.Notes"
   xmlns:p="using:InXone.WinUI.Controls.Entities"
   xmlns:tk="using:CommunityToolkit.WinUI.UI.Controls"
   xmlns:at="using:InXone.WinUI.Controls.Activities"
   xmlns:pedit="using:InXone.WinUI.Controls.Entities"
   xmlns:pson="using:InXone.UI.DataModel.Entities"
   xmlns:rl="using:InXone.WinUI.Controls.ReferenceLists"
   mc:Ignorable="d">

   <Grid>
      <SplitView
         MinHeight="300"
         DisplayMode="Inline"
         IsPaneOpen="True"
         OpenPaneLength="400"
         PanePlacement="Right">
         <SplitView.Pane>
            <Grid BorderBrush="LightGray" BorderThickness="1,1,0,0">
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
               </Grid.ColumnDefinitions>
               <Grid.RowDefinitions>
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="*" />
               </Grid.RowDefinitions>
               <NavigationView x:ConnectionId='2'
                  Grid.Row="0"
                  Grid.Column="0"
                  Width="400"
                                                                                 
                  HorizontalAlignment="Stretch"
                  Background="LightGray"
                  IsBackButtonVisible="Collapsed"
                  IsSettingsVisible="False"
                  PaneDisplayMode="Top"
                  SelectedItem="{Binding Path=SelectedItem, Mode=TwoWay}"
                  SelectionFollowsFocus="Enabled">
                  <NavigationView.MenuItems>
                     <NavigationViewItem Content="Notes" IsSelected="True" />
                     <NavigationViewItem Content="Person" />
                     <NavigationViewItem Content="Progress" />
                  </NavigationView.MenuItems>
               </NavigationView>
               <StackPanel x:ConnectionId='3' Grid.Row="1" Grid.Column="0"
                                                                                          >
                  <StackPanel Orientation="Vertical" Grid.Row="1">
                     <nt:NotesViewEditControl x:ConnectionId='5'
                           x:Name="NotesEditorControl"
                                                                                        />
                     <pedit:PersonBaseEditorControl x:ConnectionId='6'
                           x:Name="PersonEditorControl"
                                                                                         />
                     <rl:ReferenceListGroupEditControl x:ConnectionId='7'
                           x:Name="ReferenceListGroupControl"
                           Margin="10,5"
                                                                                           />
                  </StackPanel>
               </StackPanel>
               <!--<tk:DockPanel Grid.Row="1" Grid.Column="0"
                             Visibility="{x:Bind ViewModel.EvaluateVisibility, Mode=TwoWay}"
                             LastChildFill="True">
                  <TextBlock Text="SELECT PARTICIPANT" VerticalAlignment="Top"
                             Padding="16,14" Foreground="DarkBlue"
                             tk:DockPanel.Dock="Top" FontWeight="Bold"/>
                  <ListView ItemsSource="{x:Bind ViewModel.Persons.Items}"
                            x:Name="ParticipantList" DoubleTapped="ParticipantList_DoubleTapped"
                            BorderBrush="LightGray" BorderThickness=".5">
                     <ListView.ItemTemplate>
                        <DataTemplate x:DataType="pson:PersonModel">
                           <TextBlock Text="{x:Bind NameText,Mode=OneWay}" />
                        </DataTemplate>
                     </ListView.ItemTemplate>
                  </ListView>
               </tk:DockPanel>-->
               <pedit:ParticipantListViewControl x:ConnectionId='4' Grid.Row="1" Grid.Column="0"
                  x:Name="ParticipantListViewControl"
                                                                                 />
            </Grid>
         </SplitView.Pane>

         <Grid x:ConnectionId='8'
            x:Name="ViewPanel"
            Grid.Row="1"
            VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
               <RowDefinition Height="Auto" />
               <RowDefinition Height="*" />
               <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
               <CommandBar x:ConnectionId='12' x:Name="ListOptionButton" Foreground="DarkBlue" DefaultLabelPosition="Right">
                  <AppBarButton x:ConnectionId='17' Icon="AllApps"                                                          
                                                               FontWeight="Bold" Foreground="DarkBlue"
                                ToolTipService.ToolTip="Progress Group"/>
                  <AppBarButton x:ConnectionId='18' x:Name="EvaluateButton" Icon="Favorite" Label="Evaluate"                              />
               </CommandBar>
               <StackPanel x:ConnectionId='13' Orientation="Horizontal"                                                                >
                  <at:PeriodControl x:ConnectionId='14' x:Name="PeriodOptionsControl" />
                  <at:ProgramControl x:ConnectionId='15' x:Name="ProgramOptionsControl" />
                  <CommandBar DefaultLabelPosition="Collapsed">
                     <AppBarButton x:ConnectionId='16' x:Name="SaveEventsButton" Icon="Save"                                />
                  </CommandBar>
               </StackPanel>
            </StackPanel>

            <Frame Grid.Row="1">
                  <p:EntityFollowUpGridControl x:ConnectionId='11' 
                     x:Name="Persons"                                         
                                                                                    />
            </Frame>
            <Frame Grid.Row="1">
                  <at:ActivityPeriodRatingGridControl x:ConnectionId='10' 
                     x:Name="RatingGridControl"
                                                                                     />
            </Frame>

            <StackPanel Grid.Row="2"
               MinHeight="30"
               Padding="5,0,0,0"
               BorderBrush="DarkGray"
               BorderThickness=".25"
               Orientation="Horizontal">
               <TextBlock x:ConnectionId='9' VerticalAlignment="Center"
                                                                                  
                  TextAlignment="Left" />
            </StackPanel>

         </Grid>
      </SplitView>
   </Grid>
</UserControl>

