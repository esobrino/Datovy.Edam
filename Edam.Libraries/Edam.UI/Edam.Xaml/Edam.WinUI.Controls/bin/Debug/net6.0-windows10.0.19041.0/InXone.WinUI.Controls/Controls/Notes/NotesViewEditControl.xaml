<UserControl x:ConnectionId='1'
   x:Class="InXone.WinUI.Controls.Notes.NotesViewEditControl"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="using:InXone.WinUI.Controls.Notes"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:nt="using:InXone.UI.DataModel.Notes"
   xmlns:dp="using:CommunityToolkit.WinUI.UI.Controls"
   mc:Ignorable="d">

   <UserControl.Resources>
      <DataTemplate x:Key="NoteDataTemplate"                          >
         <StackPanel Padding="0,8" Orientation="Vertical" MaxWidth="380">
            <TextBlock
               FontSize="12"
               Foreground="{ThemeResource SystemAccentColorLight1}"
               Text="{Binding ReferenceDateText}" />
            <TextBlock
               Margin="0,4,0,0"
               FontSize="14"
               FontWeight="Bold"
               Text="{Binding TypeDescription}" />
            <TextBlock
               FontSize="14"
               Text="{Binding NoteText}"
               TextWrapping="Wrap" />
            <Border
               Height="2"
               Margin="0,4,0,0"
               Background="LightGray"
               BorderThickness="0" />
         </StackPanel>
      </DataTemplate>
   </UserControl.Resources>

   <Grid>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
         <RowDefinition Height="Auto" />
         <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <StackPanel x:ConnectionId='4' Grid.Row="0"                                                      >
         <StackPanel Margin="0,5" Orientation="Horizontal">
            <Button x:ConnectionId='13'                                          Content="* Save" />
            <Button x:ConnectionId='14'
               Margin="5,0"
                                                         
               Content="x Delete"
                                                         />
            <Button x:ConnectionId='15'                                              Content="Done" />
         </StackPanel>
         <DatePicker x:ConnectionId='9'                                                                         />
         <ComboBox x:ConnectionId='10'
            Margin="0,5"
            DisplayMemberPath="Description"
                                                                             
                                                                                           
                                                         />

         <TextBox x:ConnectionId='11'
            MinHeight="250"
            AcceptsReturn="True"
                                                                        
            TextWrapping="Wrap" />
         <TextBlock x:ConnectionId='12'
            Margin="0,5"
            FontSize="14"
            FontWeight="Bold"
                                                                    
                                                                  />
      </StackPanel>

      <dp:DockPanel x:ConnectionId='5' Grid.Row="1"                                                      
                    LastChildFill="True">
         <StackPanel dp:DockPanel.Dock="Top" Padding="10,5,0,5" Orientation="Horizontal">
            <Button x:ConnectionId='8'
                                                      
               Content="+ Add"
                                                                           />
         </StackPanel>

         <TextBlock x:ConnectionId='6' Padding="15,5,0,15" dp:DockPanel.Dock="Bottom"
                                                                  />

         <ListView x:ConnectionId='7'
            Margin="0"
            BorderBrush="LightGray"
            BorderThickness="0,.5,0,0"
            ItemTemplate="{StaticResource NoteDataTemplate}"
                                                               
                                                                       
            SelectionMode="Single" />
      </dp:DockPanel>
      
