<UserControl x:ConnectionId='1'
    x:Class="Edam.WinUI.Controls.Assets.AssetMapSidePanelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Edam.WinUI.Controls.Assets"
    xmlns:asch="using:Edam.Data.AssetSchema"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

   <Grid BorderBrush="#E0E0E0" BorderThickness="1,0,0,0">
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="*" />
         <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
         <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      
      <StackPanel x:ConnectionId='2' Grid.Row="0" Grid.Column="0" Orientation="Vertical" MinWidth="500"                                                             >
         <Expander IsExpanded="False" HorizontalAlignment="Stretch"
                   HorizontalContentAlignment="Stretch">
            <Expander.Header>
               <TextBlock Text="Use Case" />
            </Expander.Header>
            <Expander.Content>
               <Grid>
                  <StackPanel Orientation="Vertical">
                     <TextBox x:ConnectionId='13' Header="Name"                                                    Margin="0,0,0,8" />
                     <TextBox x:ConnectionId='14' Header="Description"                                                          
                              AcceptsReturn="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                  </StackPanel>
               </Grid>
            </Expander.Content>
         </Expander>

         <Expander IsExpanded="True" HorizontalAlignment="Stretch"
                   HorizontalContentAlignment="Stretch">
            <Expander.Header>
               <TextBlock Text="Source Elements" />
            </Expander.Header>
            <Expander.Content>
               <Grid>
                  <ListView x:ConnectionId='11'                                                                  >
                     <ListView.ItemTemplate>
                        <DataTemplate>
                           <TextBlock Text="{Binding DisplayFullPath}" Grid.Column="1" />
                        </DataTemplate>
                     </ListView.ItemTemplate>
                  </ListView>
               </Grid>
            </Expander.Content>
         </Expander>

         <Expander IsExpanded="True" HorizontalAlignment="Stretch"
                   HorizontalContentAlignment="Stretch">
            <Expander.Header>
               <TextBlock Text="Target Elements" />
            </Expander.Header>
            <Expander.Content>
               <Grid>
                  <ListView x:ConnectionId='9'                                                                  >
                     <ListView.ItemTemplate>
                        <DataTemplate>
                           <TextBlock Text="{Binding DisplayFullPath}" Grid.Column="1" />
                        </DataTemplate>
                     </ListView.ItemTemplate>
                  </ListView>
               </Grid>
            </Expander.Content>
         </Expander>

         <Expander IsExpanded="True" HorizontalAlignment="Stretch"
                   HorizontalContentAlignment="Stretch">
            <Expander.Header>
               <TextBlock Text="Map Item" />
            </Expander.Header>
            <Expander.Content>
               <Grid>
                  <StackPanel Orientation="Vertical">
                     <TextBox x:ConnectionId='7' Header="Description"                                                          
                              AcceptsReturn="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                     <TextBox x:ConnectionId='8' Header="Instructions"                                                           
                              AcceptsReturn="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                  </StackPanel>
               </Grid>
            </Expander.Content>
         </Expander>

         <Expander IsExpanded="True" HorizontalAlignment="Stretch"
                   HorizontalContentAlignment="Stretch">
            <Expander.Header>
               <TextBlock Text="Booklet" />
            </Expander.Header>
            <Expander.Content>
               <Grid>
                  <StackPanel Orientation="Vertical">
                     <TextBox x:ConnectionId='5' Header="Name"                                                             Margin="0,0,0,8" />
                     <TextBox x:ConnectionId='6' Header="Description"                                                                   
                              AcceptsReturn="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                  </StackPanel>
               </Grid>
            </Expander.Content>
         </Expander>
      </StackPanel>

      <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
         <Button x:ConnectionId='3' HorizontalAlignment="Right" x:Name="SidePanelToggle" Background="Transparent" Height="40" BorderThickness="0"                              >
            <FontIcon x:ConnectionId='4' HorizontalAlignment="Left" FontFamily="Segoe MDL2 Assets"                                                         />
         </Button>
      </StackPanel>
   </Grid>
</UserControl>

