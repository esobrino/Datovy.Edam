<UserControl x:ConnectionId='1'
   x:Class="InXone.WinUI.Controls.Entities.EntityFollowUpViewControl"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="using:InXone.WinUI.Controls.Entities"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:nt="using:InXone.WinUI.Controls.Notes"
   xmlns:p="using:InXone.WinUI.Controls.Entities"
   xmlns:pedit="using:InXone.WinUI.Controls.Entities"
   xmlns:rl="using:InXone.WinUI.Controls.ReferenceLists"
   mc:Ignorable="d">

   <Grid>
      <SplitView
         MinHeight="300"
         DisplayMode="Inline"
         IsPaneOpen="True"
         OpenPaneLength="400"
         PanePlacement="Right">
         <SplitView.Pane>
            <Grid BorderBrush="LightGray" BorderThickness="1,1,0,0">
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
               </Grid.ColumnDefinitions>
               <Grid.RowDefinitions>
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
               </Grid.RowDefinitions>
               <NavigationView
                  Grid.Row="0"
                  Grid.Column="0"
                  Width="400"
                  HorizontalAlignment="Stretch"
                  Background="LightGray"
                  IsBackButtonVisible="Collapsed"
                  IsSettingsVisible="False"
                  PaneDisplayMode="Top"
                  SelectedItem="{Binding Path=SelectedItem, Mode=TwoWay}"
                  SelectionFollowsFocus="Enabled">
                  <NavigationView.MenuItems>
                     <NavigationViewItem Content="Notes" IsSelected="True" />
                     <NavigationViewItem Content="Person" />
                     <NavigationViewItem Content="Progress" />
                  </NavigationView.MenuItems>
               </NavigationView>
               <nt:NotesViewEditControl x:ConnectionId='2'
                  x:Name="NotesEditorControl"
                  Grid.Row="1"
                  Grid.Column="0"
                                                                               />
               <pedit:PersonBaseEditorControl x:ConnectionId='3'
                  x:Name="PersonEditorControl"
                  Grid.Row="2"
                  Grid.Column="0"
                                                                                />
               <rl:ReferenceListGroupEditControl x:ConnectionId='4'
                  x:Name="ReferenceListGroupControl"
                  Grid.Row="3"
                  Grid.Column="0"
                  Margin="10,5"
                                                                                  />
            </Grid>
         </SplitView.Pane>

         <Grid x:ConnectionId='5'
            x:Name="ViewPanel"
            Grid.Row="1"
            VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
               <RowDefinition Height="Auto" />
               <RowDefinition Height="*" />
               <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel />

            <NavigationView x:ConnectionId='6'
               x:Name="TopMenuNavigation"
               Grid.Row="1"
               Grid.Column="0"
               IsBackButtonVisible="Collapsed"
               IsSettingsVisible="False"
                                                          
               PaneDisplayMode="Top"
               SelectionFollowsFocus="Disabled">
               <NavigationView.MenuItems>
                  <NavigationViewItem x:ConnectionId='8'
                     x:Name="ListsItem"
                                                                                
                     Icon="AllApps" />
                  <!--<NavigationViewItem
                     x:Name="FindItem"
                     Content="Find"
                     Icon="Find" />-->
               </NavigationView.MenuItems>
               <Frame>
                  <p:EntityFollowUpGridControl x:ConnectionId='9' x:Name="Persons"                                          />
               </Frame>
            </NavigationView>

            <StackPanel
               Grid.Row="2"
               MinHeight="30"
               Padding="5,0,0,0"
               BorderBrush="DarkGray"
               BorderThickness=".25"
               Orientation="Horizontal">
               <TextBlock x:ConnectionId='7'
                  VerticalAlignment="Center"
                                                                                  
                  TextAlignment="Center" />
            </StackPanel>
         </Grid>
      </SplitView>
   </Grid>
</UserControl>

