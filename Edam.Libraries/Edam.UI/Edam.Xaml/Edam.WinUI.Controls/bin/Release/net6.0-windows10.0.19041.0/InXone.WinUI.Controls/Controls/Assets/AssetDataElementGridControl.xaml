<UserControl x:ConnectionId='1'
    x:Name="DataElementGridControl"
    x:Class="InXone.WinUI.Controls.Assets.AssetDataElementGridControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InXone.WinUI.Controls.Assets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dg="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sf="using:Syncfusion.UI.Xaml.DataGrid"
    mc:Ignorable="d">

   <UserControl.Resources>
      <local:CustomRowStyleSelector x:Key="styleselector"/>
      <Style x:Key="typeStyle" TargetType="sf:DataGridRowControl">
         <Setter Property="Background" Value="#F2F2FF" />
      </Style>
      <Style x:Key="enumStyle" TargetType="sf:DataGridRowControl">
         <Setter Property="Background" Value="#F8F8F8" />
      </Style>
      <Style x:Key="normalStyle" TargetType="sf:DataGridRowControl">
         <Setter Property="Background" Value="White" />
      </Style>
   </UserControl.Resources>

   <Border Grid.Row="0" Grid.Column="0" BorderThickness="0,0,0,1" BorderBrush="#EEEEEE">
      <dg:DockPanel>
         <StackPanel Orientation="Horizontal" dg:DockPanel.Dock="Top"
            BorderThickness="1,0,1,1" BorderBrush="#DDDDDD" Background="#F9F9F9" Padding="0,5" >
            <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
               <Button Margin="3,0,0,0" Background="Transparent" BorderThickness="0" Padding="6"
                    ToolTipService.ToolTip="Save To">
                  <FontIcon FontSize="20" FontFamily="Segoe MDL2 Assets" Glyph="&#xE74E;"/>
               </Button>
               <ComboBox MinWidth="120" ItemsSource="{x:Bind ViewModel.SaveOptions, Mode=TwoWay}" 
                         PlaceholderText="Select Target" ToolTipService.ToolTip="Select where to Save"/>
               <Button Margin="0,0,5,0" Background="Transparent" BorderThickness="0" Padding="6"
                       ToolTipService.ToolTip="Execute">
                  <FontIcon FontSize="20" FontFamily="Segoe MDL2 Assets" Glyph="&#xf5B0;" Foreground="Green"/>
               </Button>
               <Button Margin="0,0,5,0" Background="Transparent" BorderThickness="0" Padding="6"
                       ToolTipService.ToolTip="Clean All Results">
                  <FontIcon FontSize="12" FontFamily="Segoe MDL2 Assets" Glyph="&#xE894;" Foreground="SteelBlue" FontWeight="Bold"/>
               </Button>
            </StackPanel>-->
            <Button Margin="5,0,5,0" Background="Transparent" BorderThickness="0" Padding="6">
               <TextBlock x:ConnectionId='3' x:Name="ItemsRecordCount"                                                  Foreground="DarkBlue" />
            </Button>
         </StackPanel>

         <!--<dg:DataGrid ItemsSource="{x:Bind ViewModel.Items}" 
                AutoGenerateColumns="False" AlternatingRowBackground="LightGray">
         <dg:DataGrid.Columns>
            <dg:DataGridTextColumn Header="Entity" Width="SizeToCells" Binding="{Binding EntityQualifiedNameText}" />
            <dg:DataGridTextColumn Header="Element" Width="SizeToCells" Binding="{Binding ElementName}" />
            <dg:DataGridTextColumn Header="Type" Width="SizeToCells" Binding="{Binding DataTypeText}" />
            <dg:DataGridTextColumn Header="ElementType" Width="SizeToCells" Binding="{Binding ElementTypeText}" />
         </dg:DataGrid.Columns>
         </dg:DataGrid>-->

         <sf:SfDataGrid x:ConnectionId='2' 
            VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
            x:Name="DataGrid" 
            RowStyleSelector="{StaticResource styleselector}"
            AllowFiltering="True"
            AllowResizingColumns="True" Background="White"
            ScrollViewer.VerticalScrollBarVisibility="Visible"
            ScrollViewer.HorizontalScrollBarVisibility="Visible"
            AutoGenerateColumns="False" EnableDataVirtualization="True"
            ColumnWidthMode="SizeToCells" AllowSorting="False" 
                                                               >
            <sf:SfDataGrid.Columns>
               <sf:GridTextColumn HeaderText="" MappingName="OrdinalNo" />
               <sf:GridTextColumn HeaderText="Entity" MappingName="EntityQualifiedNameText"/>
               <sf:GridTextColumn HeaderText="Element" MappingName="ElementName"/>
               <sf:GridTextColumn HeaderText="Type" MappingName="DataTypeText" />
               <sf:GridTextColumn HeaderText="ElementType" MappingName="ElementTypeText"/>
               <sf:GridTextColumn HeaderText="Occurs" MappingName="Occurs"/>
               <sf:GridTextColumn HeaderText="Annotation" MappingName="AnnotationText"/>
            </sf:SfDataGrid.Columns>
         </sf:SfDataGrid>

      </dg:DockPanel>
   </Border>
</UserControl>

