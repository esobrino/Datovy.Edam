<UserControl
   x:Class="Edam.WinUI.Controls.Utilities.TextButtonControl"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="using:Edam.WinUI.Controls.Utilities"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   mc:Ignorable="d">

   <Border
      x:Name="ControlBorder"
      Margin="2"
      Background="White"
      BorderBrush="LightGray"
      BorderThickness=".5"
      CornerRadius="15"
      PointerEntered="ButtonText_PointerEntered"
      PointerExited="ButtonText_PointerExited">
      <StackPanel VerticalAlignment="Center">
         <TextBlock
            x:Name="ButtonText"
            MinWidth="60"
            MinHeight="60"
            Padding="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            Text="{x:Bind ViewModel.Texto, Mode=TwoWay}"
            TextAlignment="Center" />
      </StackPanel>
   </Border>
</UserControl>
